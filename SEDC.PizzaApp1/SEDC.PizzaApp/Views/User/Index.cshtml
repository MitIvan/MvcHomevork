@model List<UserViewModel>

<h1>Users</h1>

<a asp-controller="User" asp-action="AddUser" class="btn btn-primary">Add User</a>

<hr />

@foreach (var user in Model)
{
    <p>First Name: @user.FirstName</p>
    <p>Last Name: @user.LastName</p>
    <p style="color:darkslateblue"><strong>@(user.PremiumUser ? "Premium User" : null)</strong></p> 

    <a asp-controller="User" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-success">Edit User</a>
    <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete User</a>
    <hr />
}